BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Always
AllowShortIfStatementsOnASingleLine: true
AllowShortFunctionsOnASingleLine: false
IndentCaseLabels: true
AllowShortCaseLabelsOnASingleLine: true
BreakBeforeBraces: Linux
IncludeCategories:
  - Regex:           '^<[^.]\*>'
    Priority:        1
  - Regex:           '^<'
    Priority:        2
  - Regex:           '^"'
    Priority:        3
